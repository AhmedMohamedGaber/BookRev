@model IEnumerable<BookRev.Models.Publisher>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h2>
        <i class="bi bi-send-check-fill"></i>
        Publisher
    </h2>
    <hr />
    <style>
        .custom-thead {
            background-color: #0099ff;
            color: white;
        }
    </style>
    <p>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-square"></i>Add New
        </a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered ">
            <thead class="custom-thead">
                <tr class="table-info">
                    <th><i class="mr-2 bi bi-eye"></i>...
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        PhoneNumber
                    </th>
                    <th>
                        Url
                    </th>
                    <th>Ations</th>
                </tr>
            </thead>
          

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="justify-content-end">@Html.ActionLink("", "Details", new { id=item.Id }, new { @class = "bi bi-book btn btn-outline-secondary"})</td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                        <td>
                            <div class="d-flex">


                                @Html.ActionLink("Edit", "Edit", new { x=item.Id }, new { @class = "bi bi-pencil-square  btn btn-info" })
                                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) *@
                                @Html.ActionLink("Delete", "Delete", new {  id=item.Id }, new { @class = "bi bi-trash btn btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
